{
  "name": "vue-zustand",
  "version": "0.4.0",
  "description": "🐻 Bear necessities for Vue.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/vue-zustand.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build-fast": "tsup src/index.ts --format esm,cjs --external zustand/vanilla",
    "build": "pnpm run build-fast --dts-resolve",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint --ext=js,ts .",
    "lint:fix": "eslint --ext=js,ts . --fix"
  },
  "peerDependencies": {
    "vue": ">=3.2.0",
    "zustand": ">=4.3.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.18.9",
    "@vue/test-utils": "^2.2.10",
    "bumpp": "^7.2.0",
    "eslint": "^8.33.0",
    "jsdom": "^19.0.0",
    "tsup": "^6.6.0",
    "typescript": "^4.9.5",
    "vitest": "^0.6.3",
    "vue": "^3.2.47",
    "zustand": "^4.3.2"
  },
  "homepage": "https://github.com/wobsoriano/vue-zustand#readme",
  "eslintConfig": {
    "extends": "@antfu"
  },
  "eslintIgnore": [
    "dist",
    "node_modules"
  ]
}
