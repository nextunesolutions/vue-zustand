{
  "name": "vue-zustand",
  "description": "🐻 Bear necessities for Vue.",
  "license": "MIT",
  "version": "0.1.6",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build-fast": "tsup src/index.ts --format esm,cjs --external zustand/vanilla",
    "build": "pnpm run build-fast -- --dts-resolve",
    "test": "vitest run",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.16.1",
    "bumpp": "^7.1.1",
    "eslint": "^8.10.0",
    "lint-staged": "^12.3.5",
    "simple-git-hooks": "^2.7.0",
    "tsup": "^5.11.13",
    "typescript": "^4.3.5",
    "vitest": "^0.5.9"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/vue-zustand.git"
  },
  "homepage": "https://github.com/wobsoriano/vue-zustand#readme",
  "dependencies": {
    "vue": "^3.2.31",
    "zustand": "^3.7.1"
  },
  "peerDependencies": {
    "vue": "^3.2.0",
    "zustand": "^3.6.0"
  },
  "eslintConfig": {
    "extends": "@antfu"
  },
  "eslintIgnore": [
    "dist"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
