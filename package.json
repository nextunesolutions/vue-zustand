{
  "name": "vue-zustand",
  "version": "0.3.1",
  "description": "🐻 Bear necessities for Vue.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/vue-zustand.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build-fast": "tsup src/index.ts --format esm,cjs --external zustand/vanilla",
    "build": "pnpm run build-fast -- --dts-resolve",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint --ext=js,ts .",
    "lint:fix": "eslint --ext=js,ts . --fix"
  },
  "peerDependencies": {
    "vue": ">=3.2.0",
    "zustand": ">=4.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.18.9",
    "@vue/test-utils": "^2.0.2",
    "bumpp": "^7.1.1",
    "eslint": "^8.11.0",
    "jsdom": "^19.0.0",
    "lint-staged": "^12.3.5",
    "simple-git-hooks": "^2.7.0",
    "tsup": "^5.12.1",
    "typescript": "^4.6.3",
    "vitest": "^0.6.3",
    "vue": "^3.2.37",
    "zustand": "^4.1.4"
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "homepage": "https://github.com/wobsoriano/vue-zustand#readme",
  "eslintConfig": {
    "extends": "@antfu"
  },
  "eslintIgnore": [
    "dist",
    "node_modules"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
